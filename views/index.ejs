<%- include header.ejs %>
<% if (!user) { %>
<div class="splash text-center">
    <a href="https://github.com/IBM-Bluemix/facebook-photo-analyzer"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png"></a>
    <div class="row">
        <img class="logo" src="images/bluemix_logo.png">
        <img id="box" class="logo" src="images/box_logo.png">
        <img class="logo" src="images/watson_logo.png">
    </div>
    <div class="row splash-header"
        <h2>Facebook Photo Analyzer</h2>
    </div>
    <div class="row splash-sub-header"
        <p>Let Watson analyze your photos...</p>
    </div>
    <div class="row">
        <a href="/auth/facebook">
            <button type="button" class="btn btn-default btn-lg">Sign in with Facebook</button>
        </a>
    </div>
</div>
<% } else { %>
<h2>Hello, <%= user.profile.displayName %>!</h2>
<hr />
<h3>Below are some photos from your Facebook account</h3>
<div>
    <div class="row">
        <img src="<%= user.result.source %>" />
        <div>Comment Sentiment: <%= user.result.sentiment.type %></div>
        <div>Items in Picture:</div>
        <ul>
        <% for(var i=0; i<user.result.labels.length; i++) {%>
           <li><%= user.result.labels[i].label_name %> - <%= user.result.labels[i].label_score %></li>
        <% } %>
        </ul>
    </div>
</div>
<% } %>
<%- include footer.ejs %>
